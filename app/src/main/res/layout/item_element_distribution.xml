<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/margin_size">

    <ImageView
        android:id="@+id/iv_element"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        app:tint="?attr/colorOnPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/ic_chars" />

    <TextView
        android:id="@+id/tv_ele_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_xsmall"
        android:textSize="@dimen/h3"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/iv_element"
        app:layout_constraintStart_toEndOf="@id/iv_element"
        app:layout_constraintTop_toTopOf="@id/iv_element"
        tools:text="Physical" />

    <TextView
        android:id="@+id/tv_ele_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/margin_size_xsmall"
        android:textSize="@dimen/h3"
        app:layout_constraintBottom_toBottomOf="@id/tv_ele_name"
        app:layout_constraintStart_toEndOf="@id/tv_ele_name"
        app:layout_constraintTop_toTopOf="@id/tv_ele_name"
        tools:text="80%" />

</androidx.constraintlayout.widget.ConstraintLayout>